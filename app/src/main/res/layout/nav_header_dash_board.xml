<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:background="@drawable/side_nav_bar"
    android:gravity="bottom"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <com.example.keval.e_moss.Utils.CircleImageView
            android:id="@+id/cvProfilePhoto"
            android:layout_width="@dimen/dp60"
            android:layout_height="@dimen/dp60"
            android:src="@mipmap/splash" />

        <TextView
            android:id="@+id/tvNavHeaderDashBoardUserName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/dp10"
            android:text="Keval Cholera"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvNavHeaderDashBoardUserNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="+918460121117"
            android:textColor="@color/black"
            android:textStyle="bold" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/dp20"
            android:layout_height="@dimen/dp20"
            android:layout_gravity="end"
            android:layout_marginBottom="@dimen/dp10"
            android:src="@mipmap/ic_edit" />

        <Button
            android:id="@+id/btNavHeaderDashBoardEnglish"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:text="A"
            android:textColor="@color/black"
            android:textSize="7sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btNavHeaderDashBoardHindi"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:text="à¤"
            android:textColor="@color/black"
            android:textSize="7sp"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>


